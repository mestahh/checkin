<%= form_tag(reserve_path, :method => 'get') do %>
  <fieldset>
    <h1>Services:</h1>
    <div>
      <select name="service">
        <% @services.each do |service| %> 
          <option value=<%= service.id %>><%= service.name %></option>
        <% end %> 
      </select>
    </div>
    <div>
      <%= hidden_field_tag :shop_id, params[:shop_id], :value => @shop.id %>
    </div>
    <div>
      <%= submit_tag "Next" %>
    </div>
  </fieldset>
<% end %>
<%= link_to 'Reservations', reservations_path %>
