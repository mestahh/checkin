<%= form_tag do %>
  <fieldset>
    <h1>Create a reservation:</h1>
    <div>
      <label for="start_time" >Start time:</label>
      <%= text_field_tag :start_time, params[:start_time] %>
    </div>
	<div>
      <%= hidden_field_tag :service_id, params[:service_id], :value => @service.id %>
    </div>
    <div>
      <%= hidden_field_tag :shop_id, params[:shop_id], :value => @shop.id %>
    </div>
    <div>
      <%= submit_tag "Reserve" %>
    </div>
  </fieldset>
<% end %>