<%= form_tag do %>  <fieldset>    <h1>Edit</h1>	<div>      <%= hidden_field_tag :user_id, params[:user_id], :value => @user.id %>    </div>    <div>      <label for="username" >Name:</label>      <%= text_field_tag :username, params[:username], :value => @user.username %>    </div>	<div>      <label for="password" >Password:</label>      <%= password_field_tag :password, params[:password] , :value => @user.password %>    </div>    <div>      <%= submit_tag "Edit" %>    </div>  </fieldset><% end %>